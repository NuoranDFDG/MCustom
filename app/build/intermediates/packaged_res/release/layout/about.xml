<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="30dp" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linerlayout_water_selector"

        android:paddingStart="26dp"
        android:paddingTop="26dp"
        android:paddingBottom="25dp"
        android:paddingEnd="80dp"
        android:clickable="true"
        android:focusable="true"

        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:scaleType="center"
                    android:src="@mipmap/ic_nuoran_round" />

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="26dp"
                android:layout_marginEnd="26dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/gotham"
                    android:text="MCustom"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/calibri"
                    android:text="0.80.1r00cc000"
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/github_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:fontFamily="@font/calibri"
                    android:text=" "
                    android:textColor="@color/gray"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:fontFamily="@font/calibri"
                android:text="作者/特别感谢:"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:layout_marginBottom="6dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp" >

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/github_about1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/teal_200" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/about_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp" >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp" >

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/github_about2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/teal_200" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/about_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp" >

                    <ImageView
                        android:scaleType="fitXY"
                        android:id="@+id/github_about3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@color/teal_200" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/about_name3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_gravity="center_vertical"
                    android:textSize="16sp"
                    android:layout_marginStart="6dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>